<?xml version="1.0"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="vanio_api.security.access_denied_listener.class">Vanio\ApiBundle\Security\AccessDeniedListener</parameter>
        <parameter key="vanio_api.serializer.accessor_normalizer.class">Vanio\ApiBundle\Serializer\AccessorNormalizer</parameter>
    </parameters>

    <services>
        <service id="vanio_api.security.access_denied_listener" class="%vanio_api.security.access_denied_listener.class%" public="false" abstract="true">
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="security.authentication.trust_resolver"/>
            <argument>%vanio_api.access_denied_listener.formats%</argument>
        </service>

        <service id="vanio_api.serializer.accessor_normalizer" class="%vanio_api.serializer.accessor_normalizer.class%" public="false">
            <tag name="serializer.normalizer" priority="-995"/>
        </service>
    </services>
</container>
